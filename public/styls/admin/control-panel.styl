.control-panel
    //background green
    position relative
    max-width 420px
    margin auto
    .buttons
        display flex
        gap 1rem
        flex-wrap wrap
        justify-content center
        width 100%
        max-width 420px
        margin auto
        //margin-bottom 2rem
        border 1px solid alpha + 20%
        //background red
        button
            flex-grow 1
            border 1px solid alpha + 40%
    .control-panel-cards
        margin-top 2rem
        display flex
        flex-direction column

        gap 2rem
    .card-1
        display grid
        grid-template-columns 1fr 1fr
        text-align: center
        gap .6rem
        background rgba(alpha, 0.2)
        padding 1rem
        p  
    
            background rgba(alpha, 0.4)
            padding .4rem