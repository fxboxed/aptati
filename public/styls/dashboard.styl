.dashboard-grid
    //border 1px solid alpha + 40%
    max-width 420px
    margin 2rem auto 0
.dasboard-nav-card
.dashboard-nav
    display flex
    justify-content space-around
    gap 1rem
    border-radius 8px
    list-style none
    padding 0
    margin 0
    li
        a
            color alpha + 80%
            font-weight bold
            &:hover
                text-decoration underline
.btn-3d
    position relative
    padding 10px 12px
    border none
    border-radius 16px
    font-weight bold
    cursor pointer
    transition all 0.3s ease
    background linear-gradient(135deg, alpha - 40% 0%, delta - 40% 100%)
    color alpha + 60%
    box-shadow 0 8px 15px rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.2)
    
    &:hover
        transform translateY(-2px)
        box-shadow 0 12px 20px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.2)
    
    &:active
        transform translateY(0)
        box-shadow 0 4px 8px rgba(0, 0, 0, 0.2), inset 0 2px 4px rgba(0, 0, 0, 0.1)