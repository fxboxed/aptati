alpha = #2d7f9d


.header-nav
  background: linear-gradient(135deg, alpha 0%, darken(alpha, 10%) 100%)


.header-container
  max-width: 1400px
 
.top-bar
  background: linear-gradient(90deg, delta, epsilon)
 
.announcement
  display: flex


.announcement-link
  color: alpha


  &:hover
    transform: translateX(5px)

// Main Navigation
.navbar
  display: flex
  

.nav-group
  display: flex
  

  &.nav-left
    justify-content: flex-start
    flex: 1

  &.nav-right
    justify-content: flex-end
    flex: 1