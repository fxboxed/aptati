// Color Variables
alpha = #2d7f9d
beta = #a4c9d9
gamma = #eaf2f4
delta = #dc7684
epsilon = #e4ca99

// Header Navigation - COMPLETELY TRANSPARENT
.header-nav
  background: transparent
  position: absolute
  top: 0
  left: 0
  right: 0
  z-index: 1000
  width: 100%
  transition: all 0.3s ease

.header-container
  max-width: 1280px
  margin: 0 auto
  padding: 20px 20px 0 20px

.navbar
  display: flex
  align-items: center
  justify-content: space-between
  min-height: 60px


// Left Section with Logo
.nav-left
  display: flex
  align-items: center
  gap: 40px

// Enhanced Logo with Background
.logo
  text-decoration: none
  display: flex
  align-items: center
  gap: 15px
  transition: all 0.3s ease
  
  &:hover
    transform: translateY(-2px)
    

.logo-inner
  background: linear-gradient(135deg, darken(alpha, 5%), darken(alpha, 10%))
  border-radius: 12px
  padding: 10px 20px
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  position: relative
  overflow: hidden
  
  &::before
    content: ''
    position: absolute
    top: 0
    left: 0
    right: 0
    height: 2px
    background: linear-gradient(90deg, delta, epsilon, delta)
    opacity: 0.7

.logo-text
  font-size: 26px
  font-weight: 900
  background: linear-gradient(135deg, gamma 0%, beta 50%, gamma 100%)
  -webkit-background-clip: text
  -webkit-text-fill-color: transparent
  background-clip: text
  letter-spacing: 1px
  line-height: 1
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3)



// Navigation Menu
.nav-menu
  display: flex
  align-items: center
  gap: 20px

// Menu Toggle (Mobile)
.menu-toggle
  display: none
  background: none
  border: none
  cursor: pointer
  padding: 8px
  margin-left: 10px
  flex-direction: column
  gap: 4px

.menu-bar
  width: 22px
  height: 2px
  background: gamma
  border-radius: 1px
  transition: all 0.3s ease

// Navigation List - TRANSPARENT
.navlist
  display: flex
  align-items: center
  gap: 20px
  list-style: none
  margin: 0
  padding: 0
  background: transparent

.navitem
  position: relative

.nav-link
  display: flex
  align-items: center
  gap: 6px
  color: gamma
  text-decoration: none
  font-weight: 600
  font-size: 15px
  padding: 8px 16px
  border-radius: 20px
  transition: all 0.3s ease
  
  &:hover
    background: rgba(gamma, 0.1)
    color: epsilon
    transform: translateY(-1px)

.nav-highlight
  background: linear-gradient(135deg, delta, epsilon)
  color: alpha
  font-weight: 700
  
  &:hover
    background: linear-gradient(135deg, epsilon, delta)
    transform: translateY(-2px) scale(1.05)

// Right Section
.nav-right
  display: flex
  align-items: center
  gap: 15px

.logout-form
  margin: 0

.logout-btn
  background: rgba(delta, 0.2)
  border: 1px solid delta
  color: gamma
  padding: 8px 12px
  border-radius: 20px
  font-weight: 600
  font-size: 15px
  cursor: pointer
  transition: all 0.3s ease
  
  &:hover
    background: delta
    color: gamma
    transform: translateY(-2px)

// Contact Button ---------------------------------------------------------
.contact

  padding: 8px 20px
  border-radius: 20px
  font-weight: 600
  font-size: 15px
  cursor: pointer
  transition: all 0.3s ease

  
  &:hover
    background: gamma
    color: alpha
    transform: translateY(-2px)
    box-shadow: 0 4px 12px rgba(gamma, 0.3)

.user-icon
  font-size: 16px

// Desktop Navigation Links
.desktop-navlist
  display: flex
  align-items: center
  gap: 20px
  list-style: none
  margin: 0
  padding: 0

// Mobile Menu (hidden by default)
.mobile-menu
  display: none
  position: absolute
  top: 100%
  left: 0
  right: 0
  background: rgba(alpha, 0.95)
  backdrop-filter: blur(20px)
  padding: 20px
  border-top: 1px solid rgba(gamma, 0.2)
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2)
  z-index: 999

.mobile-navlist
  list-style: none
  margin: 0
  padding: 0
  display: flex
  flex-direction: column
  gap: 15px

.mobile-nav-link
  display: block
  padding: 12px 20px
  color: gamma
  text-decoration: none
  font-weight: 600
  border-radius: 10px
  transition: all 0.3s ease
  
  &:hover
    background: rgba(gamma, 0.1)

// ====== RESPONSIVE DESIGN ======

// Tablet and below
@media (max-width: 768px)
  .header-nav
    position: absolute
    background: transparent !important
    backdrop-filter: none
    box-shadow: none
  
  .header-container
    padding: 15px 15px 0 15px
  
  .navbar
    flex-direction: column
    align-items: stretch
    gap: 20px
    min-height: auto
  
  // First row: Logo and burger menu on the same line
  .nav-left
    order: 1
    display: flex
    justify-content: space-between
    align-items: center
    width: 100%
    gap: 0
  
  // Show menu toggle (burger)
  .menu-toggle
    display: flex
    order: 2
  
  // Hide desktop navigation on mobile
  .desktop-navlist
    display: none
  
  // Second row: Login and contact buttons below logo and burger
  .nav-right
    order: 2
    flex-direction: column
    width: 100%
    align-items: center
    gap: 12px
    margin-top: 10px
    
    .navlist
      flex-direction: column
      gap: 12px
      width: 100%
      max-width: 250px
    
    .navitem
      width: 100%
      text-align: center
  
  // Mobile menu when active
  .mobile-menu.active
    display: block
  
  // Make buttons full width on mobile
  .contact-btn,
  .logout-btn,
  .nav-link.nav-highlight
    width: 100%
    justify-content: center
    padding: 12px 20px
  
  // Adjust logo size for mobile
  .logo-bg
    transform: scale(0.85)
  
  .logo-text
    font-size: 22px
  
  .logo-life
    font-size: 10px
    letter-spacing: 2px

// Small mobile devices
@media (max-width: 480px)
  .header-container
    padding: 12px 10px 0 10px
  
  .logo-text
    font-size: 20px
  
  .logo-life
    font-size: 9px
  
  .logo-bg
    padding: 3px
  
  .logo-inner
    padding: 8px 16px
  
  .nav-right .navlist
    max-width: 200px
  
  
  .menu-toggle
    padding: 6px
    margin-left: 5px