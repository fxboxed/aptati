// landing-page.styl

// Color Variables - ONLY THESE 5
alpha = #2d7f9d
beta = #a4c9d9
gamma = #eaf2f4
delta = #dc7684
epsilon = #e4ca99

// Non-color variables
transition-speed = 0.3s
hover-lift = 8px
deco-font = 'Arial Rounded MT Bold', 'Arial', sans-serif



// ===== HERO SECTION =====
// Starts at 0 (no top padding/margin). Kept behind navigation by staying on a low z-index.
// (We do not style navigation.)
.dashboard-grid 
  position relative 
  z-index 20
  height 110vh
.hero-section.site-bg-2
  position fixed
  z-index 0
  width 100%
  //height 100%
  min-height 100vh
  overflow hidden
  margin 0
  padding 0
  background linear-gradient(135deg,
    darken(alpha, 85%) 0%,
    darken(alpha, 90%) 25%,
    darken(alpha, 95%) 50%,
    darken(alpha, 90%) 75%,
    darken(alpha, 85%) 100%
  )
  top 0
  left 0

// ===== DEEP SPACE (BACKDROP) =====
.deep-space
  position absolute

  inset 0

  z-index 0
  overflow hidden

.star-field
  position absolute
  inset 0
  //background red
  height 150vh
.star-layer-1,
.star-layer-2,
.star-layer-3
  position absolute
  inset 0

.star-layer-1
  opacity .65
  filter blur(.45px)

.star-layer-2
  opacity .9

.star-layer-3
  opacity 1
  filter drop-shadow(0 0 10px rgba(beta, .06))

.star
  position absolute
  background gamma
  opacity .9
  transform-origin 50% 50%

.star--dim
  opacity .30

.star--mid
  opacity .55

.star--bright
  opacity .92

.star--warm
  background epsilon
  opacity .85

.star-4point
  width 8px
  height 8px
  clip-path polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%)
  box-shadow 0 0 12px rgba(gamma, .8), 0 0 24px rgba(gamma, .4)

.star-5point
  width 10px
  height 10px
  clip-path polygon(50% 0%, 61% 38%, 98% 35%, 68% 57%, 83% 100%, 50% 75%, 17% 100%, 32% 57%, 2% 35%, 39% 38%)
  box-shadow 0 0 15px rgba(gamma, .9), 0 0 30px rgba(gamma, .5)

.star-6point
  width 12px
  height 12px
  clip-path polygon(50% 0%, 61% 35%, 91% 30%, 69% 52%, 91% 70%, 61% 65%, 50% 100%, 39% 65%, 9% 70%, 31% 52%, 9% 30%, 39% 35%)
  box-shadow 0 0 20px rgba(gamma, .9), 0 0 40px rgba(gamma, .6)

.star-8point
  width 14px
  height 14px
  clip-path polygon(50% 0%, 63% 38%, 100% 38%, 69% 58%, 82% 100%, 50% 75%, 18% 100%, 31% 58%, 0 38%, 37% 38%)
  box-shadow 0 0 25px rgba(gamma, 1), 0 0 50px rgba(gamma, .7)

// Dwarf Star
.dwarf-star
  position absolute
  width 20px
  height 20px

  .dwarf-core
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 6px
    height 6px
    background rgba(delta, .8)
    border-radius 50%
    box-shadow 0 0 15px rgba(delta, .6)
    animation gentlePulse 4s infinite ease-in-out

  .dwarf-glow
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 20px
    height 20px
    border-radius 50%
    background radial-gradient(circle, rgba(delta, .3) 0%, rgba(alpha, 0) 70%)
    animation expandGlow 6s infinite ease-in-out

// Giant Star
.giant-star
  position absolute
  width 40px
  height 40px

  .giant-core
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 12px
    height 12px
    background rgba(epsilon, .9)
    border-radius 50%
    box-shadow 0 0 30px rgba(epsilon, .8)
    animation giantPulse 8s infinite ease-in-out

  .giant-rings
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 40px
    height 40px
    border-radius 50%
    border 1px solid rgba(epsilon, .3)
    animation rotateRings 20s infinite linear

    &:before,
    &:after
      content ''
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      border-radius 50%
      border 1px solid rgba(epsilon, .2)

    &:before
      width 30px
      height 30px

    &:after
      width 20px
      height 20px

// Binary Star
.binary-star
  position absolute
  width 30px
  height 30px

  .binary-star-1,
  .binary-star-2
    position absolute
    background rgba(gamma, .9)
    border-radius 50%

  .binary-star-1
    width 8px
    height 8px
    top 5px
    left 5px
    animation binaryOrbit1 12s infinite linear

  .binary-star-2
    width 6px
    height 6px
    bottom 5px
    right 5px
    animation binaryOrbit2 12s infinite linear

// Asteroids (NO animation)
.asteroid
  position absolute
  width 120px
  height 2px
  background linear-gradient(90deg, rgba(alpha, 0), rgba(gamma, .65), rgba(gamma, .9), rgba(gamma, .65), rgba(alpha, 0))
  transform rotate(-45deg)
  filter blur(1px)
  opacity .35
  z-index 1

.asteroid-fast
  height 1px
  opacity .30

.asteroid-medium
  height 2px
  opacity .35

.asteroid-slow
  height 3px
  opacity .28
  background linear-gradient(90deg, rgba(alpha, 0), rgba(epsilon, .45), rgba(gamma, .85), rgba(epsilon, .45), rgba(alpha, 0))

// Nebula clouds
.nebula
  position absolute
  border-radius 50%
  filter blur(80px)
  opacity .1
  animation nebulaDrift 200s infinite linear
  z-index 0

.nebula-alpha
  width 400px
  height 400px
  background radial-gradient(circle at center, rgba(alpha, .2) 0%, rgba(alpha, 0) 70%)

.nebula-beta
  width 500px
  height 500px
  background radial-gradient(circle at center, rgba(beta, .15) 0%, rgba(alpha, 0) 70%)
  animation nebulaDrift 250s infinite linear reverse

.nebula-delta
  width 350px
  height 350px
  background radial-gradient(circle at center, rgba(delta, .1) 0%, rgba(alpha, 0) 70%)
  animation nebulaDrift 300s infinite linear

// Distant Galaxy
.distant-galaxy
  position absolute
  width 200px
  height 200px
  z-index 0

  .galaxy-core
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 20px
    height 20px
    background radial-gradient(circle, rgba(gamma, .4) 0%, rgba(alpha, 0) 70%)
    border-radius 50%
    filter blur(5px)

  .galaxy-arms
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 150px
    height 150px
    background conic-gradient(from 0deg,
      rgba(alpha, 0) 0%,
      rgba(beta, .1) 10%,
      rgba(alpha, 0) 20%,
      rgba(alpha, .1) 30%,
      rgba(alpha, 0) 40%,
      rgba(gamma, .08) 50%,
      rgba(alpha, 0) 60%,
      rgba(delta, .08) 70%,
      rgba(alpha, 0) 80%,
      rgba(epsilon, .08) 90%,
      rgba(alpha, 0) 100%
    )
    border-radius 50%
    filter blur(10px)
    animation rotateGalaxy 400s infinite linear

// ===== TWINKLE CLASSES =====
.twinkle--bright
  animation twinkleBright 3s infinite ease-in-out

.twinkle--medium
  animation twinkleMedium 5s infinite ease-in-out

.twinkle--slow
  animation twinkleSlow 7s infinite ease-in-out

.twinkle--fast
  animation twinkleFast 4s infinite ease-in-out

.twinkle--veryslow
  animation twinkleVerySlow 10s infinite ease-in-out

.twinkle--pulse
  animation gentlePulse 7s infinite ease-in-out

// ===== ANIMATIONS =====
@keyframes twinkleBright
  0%, 100%
    opacity .8
    transform scale(1)
    filter brightness(1)
  50%
    opacity 1
    transform scale(1.2)
    filter brightness(1.5)

@keyframes twinkleMedium
  0%, 100%
    opacity .7
    transform scale(1)
  25%, 75%
    opacity .9
    transform scale(1.1)
  50%
    opacity 1
    transform scale(1.15)

@keyframes twinkleSlow
  0%, 100%
    opacity .6
    transform scale(1)
  50%
    opacity .9
    transform scale(1.1)

@keyframes twinkleFast
  0%, 20%, 40%, 60%, 80%, 100%
    opacity .7
    transform scale(1)
  10%, 30%, 50%, 70%, 90%
    opacity 1
    transform scale(1.1)

@keyframes twinkleVerySlow
  0%, 100%
    opacity .3
    transform scale(1)
  50%
    opacity .6
    transform scale(1.05)

@keyframes gentlePulse
  0%, 100%
    opacity .6
    transform translate(-50%, -50%) scale(1)
    box-shadow 0 0 10px rgba(delta, .4)
  50%
    opacity .9
    transform translate(-50%, -50%) scale(1.2)
    box-shadow 0 0 20px rgba(delta, .7)

@keyframes expandGlow
  0%, 100%
    opacity .3
    transform translate(-50%, -50%) scale(1)
  50%
    opacity .6
    transform translate(-50%, -50%) scale(1.3)

@keyframes giantPulse
  0%, 100%
    opacity .8
    transform translate(-50%, -50%) scale(1)
    box-shadow 0 0 20px rgba(epsilon, .6)
  50%
    opacity 1
    transform translate(-50%, -50%) scale(1.3)
    box-shadow 0 0 40px rgba(epsilon, .9)

@keyframes rotateRings
  0%
    transform translate(-50%, -50%) rotate(0deg)
  100%
    transform translate(-50%, -50%) rotate(360deg)

@keyframes binaryOrbit1
  0%
    transform rotate(0deg) translateX(8px) rotate(0deg)
  100%
    transform rotate(360deg) translateX(8px) rotate(-360deg)

@keyframes binaryOrbit2
  0%
    transform rotate(0deg) translateX(6px) rotate(0deg)
  100%
    transform rotate(360deg) translateX(6px) rotate(-360deg)

@keyframes nebulaDrift
  0%
    transform translate(0, 0) rotate(0deg)
  25%
    transform translate(100px, 50px) rotate(90deg)
  50%
    transform translate(0, 100px) rotate(180deg)
  75%
    transform translate(-100px, 50px) rotate(270deg)
  100%
    transform translate(0, 0) rotate(360deg)

@keyframes rotateGalaxy
  0%
    transform translate(-50%, -50%) rotate(0deg)
  100%
    transform translate(-50%, -50%) rotate(360deg)

// ===== 3D CUBE LAYER =====
.hero-background
  position absolute
  inset 0
  overflow hidden
  z-index 0
  pointer-events none

// Default: hidden (small screens)
.hero-3d-container
  display none
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 100%
  height 100%
  perspective 1200px
  z-index 0

.main-game-display
  position absolute
  top 50%
  left 50%
  width 200px
  height 200px
  transform translate(-50%, -50%)
  transform-style preserve-3d
  animation rotateCube 20s infinite linear

.cube
  position relative
  width 100%
  height 100%
  transform-style preserve-3d
  transform rotateX(25deg) rotateY(25deg)

.cube-face
  position absolute
  width 200px
  height 200px
  background linear-gradient(135deg, rgba(gamma, .9), rgba(beta, .9))
  border 4px solid rgba(beta, .4)
  display flex
  align-items center
  justify-content center
  font-size 80px
  font-weight 900
  color rgba(beta, .4)
  text-shadow 1px 1px 2px rgba(delta, .3), 2px 2px 4px rgba(alpha, .2)
  backface-visibility visible
  border-radius 12px
  box-shadow inset 0 0 20px rgba(gamma, .6), 0 4px 15px rgba(alpha, .25)

  &.front
    transform translateZ(100px)
    background linear-gradient(135deg, rgba(darken(gamma, 70%), .9), rgba(darken(epsilon, 70%), .9))

  &.back
    transform rotateY(180deg) translateZ(100px)
    background linear-gradient(135deg, rgba(darken(gamma, 70%), .9), rgba(darken(delta, 70%), .9))

  &.right
    transform rotateY(90deg) translateZ(100px)
    background linear-gradient(135deg, rgba(darken(gamma, 70%), .9), rgba(darken(beta, 70%), .9))

  &.left
    transform rotateY(-90deg) translateZ(100px)
    background linear-gradient(135deg, rgba(darken(gamma, 70%), .9), rgba(darken(epsilon, 70%), .9))

  &.top
    transform rotateX(90deg) translateZ(100px)
    background linear-gradient(135deg, rgba(darken(gamma, 70%), .9), rgba(darken(delta, 70%), .9))

  &.bottom
    transform rotateX(-90deg) translateZ(100px)
    background linear-gradient(135deg, rgba(darken(gamma, 70%), .9), rgba(darken(beta, 70%), .9))

.cube-shadow
  position absolute
  top 120%
  left 50%
  transform translateX(-50%)
  width 250px
  height 60px
  background radial-gradient(ellipse at center, rgba(alpha, .25) 0%, rgba(alpha, 0) 70%)
  filter blur(10px)

@keyframes rotateCube
  0%
    transform translate(-50%, -50%) rotateX(0) rotateY(0)
  100%
    transform translate(-50%, -50%) rotateX(360deg) rotateY(360deg)

// ===== HERO CONTENT (FRONT) =====
// No padding-top or margin-top (starts at 0).
.hero-content
  position relative
  z-index 1
  height 100%
  display flex
  flex-direction column
  justify-content center
  align-items center
  text-align center
  margin 0
  padding 0 20px
  max-width 1200px

.hero-title-container
  margin 11rem 0 40px 0
  width 100%
@media(min-width: 1025px)
    .hero-title-container
      margin 1rem 0 40px 0
      width auto
.hero-title
  font-family deco-font
  font-size 72px
  font-weight 900
  line-height 1
  margin 0
  color gamma
  text-shadow 2px 2px 0 rgba(alpha, .18), 10px 18px 40px rgba(alpha, .25)

.hero-title:first-child
  font-size 48px
  margin-bottom 10px

.hero-subtitle
  font-size 24px
  color rgba(gamma, .92)
  margin 20px 0 0 0
  font-weight 300
  letter-spacing 1px
  max-width 600px

.subtitle-highlight
  color epsilon
  font-weight 600
  text-shadow 0 2px 4px rgba(alpha, .3)
  position relative
  display inline-block

  &:after
    content ''
    position absolute
    bottom -4px
    left 0
    right 0
    height 3px
    background linear-gradient(90deg, rgba(alpha, 0), delta, rgba(alpha, 0))
    border-radius 2px

.hero-features
  display flex
  gap 30px
  margin 0 0 40px 0
  max-width 600px
  flex-wrap wrap
  justify-content center

.feature
  display flex
  align-items center
  gap 12px
  padding 15px 25px
  background rgba(gamma, .1)
  border-radius 12px
  backdrop-filter blur(10px)
  border 1px solid rgba(gamma, .2)
  transition all transition-speed ease

  &:hover
    transform translateY(-5px)
    background rgba(gamma, .2)
    border-color rgba(delta, .3)
    box-shadow 0 10px 20px rgba(alpha, .15)

.feature-icon
  font-size 24px
  filter drop-shadow(0 2px 4px rgba(alpha, .2))

.feature-text
  color darken(delta, 15%)
  font-size 16px
  font-weight 600
  text-shadow 0 1px 2px rgba(0, 0, 0, .1)

.hero-actions
  display flex
  gap 20px
  margin 0 0 40px 0
  flex-wrap wrap
  justify-content center

.hero-button
  padding 18px 36px
  border none
  border-radius 50px
  font-family inherit
  font-size 18px
  font-weight 600
  cursor pointer
  display flex
  align-items center
  gap 12px
  transition all .3s cubic-bezier(.4, 0, .2, 1)
  position relative
  overflow hidden

  &:before
    content ''
    position absolute
    top 0
    left -100%
    width 100%
    height 100%
    background linear-gradient(90deg, rgba(alpha, 0), rgba(gamma, .2), rgba(alpha, 0))
    transition left .6s ease

  &:hover:before
    left 100%

  &:hover
    transform translateY(-3px) scale(1.02)

  &:active
    transform translateY(0) scale(.98)

.primary-button
  background linear-gradient(135deg, rgba(delta, .9), rgba(epsilon, .9))
  color darken(alpha, 90%)
  box-shadow 0 10px 30px rgba(delta, .25), inset 0 1px 0 rgba(gamma, .8)

.secondary-button
  background linear-gradient(135deg, rgba(epsilon, .9), rgba(gamma, .9))
  color darken(alpha, 90%)
  border 2px solid epsilon

.button-text
  position relative
  z-index 1

.button-arrow
  font-size 20px
  position relative
  z-index 1

.hero-stats
  display flex
  gap 40px
  max-width 600px
  flex-wrap wrap
  justify-content center
  margin 0

.stat
  display flex
  flex-direction column
  align-items center

.stat-number
  font-size 36px
  font-weight 800
  color gamma
  text-shadow 0 2px 4px rgba(alpha, .25)
  line-height 1
  margin 0 0 4px 0

.stat-label
  font-size 14px
  color beta
  font-weight 500
  text-transform uppercase
  letter-spacing 1px

// ===== ACCESSIBILITY =====
@media (prefers-reduced-motion: reduce)
  .star,
  .dwarf-star,
  .giant-star,
  .binary-star,
  .nebula,
  .distant-galaxy,
  .cube,
  .main-game-display
    animation none !important

  .hero-button:hover,
  .feature:hover
    transform none !important

// ===== RESPONSIVE =====
@media (max-width: 768px)
  .hero-section
    height auto
    min-height 100vh
    padding 0
    margin 0

  .hero-title:first-child
    font-size 32px

  .hero-title
    font-size 48px

  .hero-subtitle
    font-size 20px

  .hero-features
    flex-direction column
    gap 15px

  .hero-actions
    flex-direction column
    gap 15px

  .hero-button
    width 100%
    max-width 300px
    justify-content center

@media (max-width: 480px)
  .hero-title:first-child
    font-size 28px

  .hero-title
    font-size 36px

  .hero-subtitle
    font-size 18px

// Desktop:
// - hero-cube ON and centered
// - hero-content on the left; all children aligned left
@media (min-width: 1025px)
  .hero-3d-container
    display block

  .hero-content
    position absolute
    top 0
    left 0
    height 100%
    width 50%
    max-width none
    margin 0
    padding 0 3vw 0 8vw
    align-items flex-start
    text-align left

  .hero-title-container
    width auto

  .hero-features
    justify-content flex-start

  .hero-actions
    justify-content flex-start

  .hero-stats
    justify-content flex-start

  .stat
    align-items flex-start
