    justify-content: center
  
  .feature-text
    color: darken(delta, 15%)
    font-weight: 600

// Small Mobile Devices (480px and below)
@media (max-width: 480px)
  .hero-content
    padding: 200px 15px 30px 15px
  
  .hero-title:first-child
    font-size: 28px
  
  .hero-title:last-child
    font-size: 36px
  
  .hero-subtitle
    font-size: 18px
  
  .feature
    padding: 12px 20px
    width: 100%
    max-width: 280px
  
  .stat-number
    font-size: 28px
  
  .hero-button
    padding: 15px 25px
    font-size: 16px
  
  .feature-text
    font-size: 15px

// High DPI screens
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
  .star-4point
    width: 4px
    height: 4px
  
  .star-5point
    width: 5px
    height: 5px
  
  .star-6point
    width: 6px
    height: 6px
  
  .star-8point
    width: 7px
    height: 7px

// Print styles
@media print
  .deep-space,
  .hero-3d-container
    display: none !important
  
  .hero-section
    background: white !important
    min-height: auto
    height: auto
  
  .hero-content
    position: relative
    z-index: 1
    color: black
  
  .hero-title,
  .hero-subtitle,
  .feature-text,
  .stat-number,
  .stat-label
    color: black !important
    text-shadow: none !important
  
  .feature
    background: #f0f0f0 !important
