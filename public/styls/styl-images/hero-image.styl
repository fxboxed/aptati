    gap: 15px
    margin-bottom: 30px
  
  .hero-actions
    flex-direction: column
    align-items: center
    gap: 15px
    margin-bottom: 30px
  
  .hero-stats
    flex-wrap: wrap
    gap: 20px
    margin-top: 30px
    justify-content: center
