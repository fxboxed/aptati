//- Desktop Layout (shown on larger screens)
.desktop-layout
  display: none
  
  @media (min-width: 1025px)
    display: block
    position: relative
    width: 100%
    height: 100%
    z-index: 10
    display: flex
    align-items: center
    justify-content: space-between
    padding: 0 5%
    max-width: 1400px
    margin: 0 auto

//- Desktop Content (Left aligned)
.desktop-content
  position: relative
  flex: 0 0 50%
  max-width: 600px
  text-align: left
  align-items: flex-start
  z-index: 10
  padding: 0
  margin: 0
  
  .hero-title-container
    margin-bottom: 40px
    width: 100%
    text-align: left
    
    .hero-title
