      font-size: 72px
      font-weight: 900
      line-height: 1
      margin: 0 0 10px 0
      color: gamma
      text-shadow: 3px 3px 0 rgba(alpha, 0.2), 6px 6px 0 rgba(alpha, 0.1)
      background: linear-gradient(135deg, gamma 0%, beta 50%, epsilon 100%)
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent
      background-clip: text
      text-align: left
      
      &:first-child
        font-size: 48px
        margin-bottom: 10px
      
      &:last-child
        font-size: 72px
  
  .hero-subtitle
    font-size: 24px
    color: gamma
    margin-top: 20px
    margin-bottom: 40px
    font-weight: 300
    letter-spacing: 1px
    max-width: 500px
    text-align: left
  
  .subtitle-highlight
    color: epsilon
    font-weight: 600
    text-shadow: 0 2px 4px rgba(alpha, 0.3)
    position: relative
    display: inline-block
    
    &::after
      content: ''
      position: absolute
      bottom: -4px
      left: 0
      right: 0
      height: 3px
      background: linear-gradient(90deg, transparent, delta, transparent)
      border-radius: 2px

//- Desktop Features (Left aligned)
.desktop-content .hero-features
  display: flex
  flex-direction: column
  gap: 15px
  margin-bottom: 40px
  max-width: 500px
  align-items: flex-start
  
  .feature
    display: flex
    align-items: center
    gap: 12px
    padding: 15px 25px
    background: rgba(gamma, 0.1)
    border-radius: 12px
    backdrop-filter: blur(10px)
    border: 1px solid rgba(gamma, 0.2)
    transition: all 0.3s ease
    text-align: left
    
    &:hover
      transform: translateY(-5px)
      background: rgba(gamma, 0.2)
      border-color: rgba(delta, 0.3)
      box-shadow: 0 10px 20px rgba(alpha, 0.15)
    
    .feature-icon
      font-size: 24px
    
    .feature-text
      color: delta
      font-size: 16px
      font-weight: 600
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1)

//- Desktop Actions (Left aligned)
.desktop-content .hero-actions
  display: flex
  gap: 20px
  margin-bottom: 40px
  align-items: flex-start
  justify-content: flex-start
  
  .hero-button
    padding: 18px 36px
    border: none
    border-radius: 50px
    font-family: inherit
    font-size: 18px
    font-weight: 600
    cursor: pointer
    display: flex
    align-items: center
    gap: 12px
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1)
    position: relative
    overflow: hidden
    
    &::before
      content: ''
      position: absolute
      top: 0
      left: -100%
      width: 100%
      height: 100%
      background: linear-gradient(90deg, transparent, rgba(gamma, 0.2), transparent)
      transition: left 0.6s ease
    
    &:hover::before
      left: 100%
    
    &:hover
      transform: translateY(-3px) scale(1.02)
    
    &:active
      transform: translateY(0) scale(0.98)
  
  .primary-button
    background: linear-gradient(135deg, rgba(delta, 0.9), rgba(epsilon, 0.9))
    color: darken(alpha, 90%)
    box-shadow: 0 10px 30px rgba(delta, 0.25), inset 0 1px 0 rgba(gamma, 0.8)
    
    &:hover
      box-shadow: 0 15px 40px rgba(delta, 0.35), inset 0 1px 0 rgba(gamma, 0.9)
  
  .secondary-button
    background: linear-gradient(135deg, rgba(epsilon, 0.9), rgba(gamma, 0.9))
    color: darken(alpha, 90%)
    border: 2px solid epsilon
    
    &:hover
      background: linear-gradient(135deg, rgba(gamma, 0.9), rgba(epsilon, 0.9))
      border-color: delta
      box-shadow: 0 15px 40px rgba(epsilon, 0.25)
  
  .button-text
    position: relative
    z-index: 1
  
  .button-arrow, .button-icon
    font-size: 20px
    position: relative
    z-index: 1

//- Desktop Stats (Left aligned)
.desktop-content .hero-stats
  display: flex
  gap: 40px
  max-width: 500px
  align-items: flex-start
  justify-content: flex-start
  
