//- FULL PAGE GAMES LANDING - RESPONSIVE LAYOUT
//- Using ONLY: alpha, beta, gamma, delta, epsilon
alpha = #2d7f9d
beta = #a4c9d9
gamma = #eaf2f4
delta = #dc7684
epsilon = #e4ca99

//- Hero Section Base
.hero-section
  position: relative
  width: 100%
  height: 100vh
  min-height: 600px
  overflow: hidden
  background: linear-gradient(135deg, 
    darken(alpha, 85%) 0%, 
    darken(alpha, 90%) 25%, 
    darken(alpha, 95%) 50%, 
    darken(alpha, 90%) 75%, 
    darken(alpha, 85%) 100%
  )
  margin: 0
  padding: 0

//- Deep Space Background
.deep-space
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  pointer-events: none
  z-index: 1
  overflow: hidden

//- Star System (keep all star styles from previous version)
.star-field, .star-layer-1, .star-layer-2, .star-layer-3
  position: absolute
  width: 100%
  height: 100%

