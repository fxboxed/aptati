//- Cube Container (Center on desktop)
.cube-container
  flex: 0 0 40%
  display: flex
  align-items: center
  justify-content: center
  position: relative
  z-index: 5

.main-game-display
  position: relative
  width: 300px
  height: 300px
  transform-style: preserve-3d
  animation: rotateCube 20s infinite linear

.cube
  position: relative
  width: 100%
  height: 100%
  transform-style: preserve-3d
  transform: rotateX(25deg) rotateY(25deg)

.cube-face
  position: absolute
  width: 200px
  height: 200px
  background: linear-gradient(135deg, rgba(gamma, 0.9), rgba(beta, 0.9))
  border: 4px solid rgba(beta, 0.4)
  display: flex
  align-items: center
  justify-content: center
  font-size: 80px
  font-weight: 900
  color: rgba(beta, 0.4)
  text-shadow: 1px 1px 2px rgba(delta, 0.3), 2px 2px 4px rgba(alpha, 0.2)
  backface-visibility: visible
  border-radius: 12px
  box-shadow: inset 0 0 20px rgba(gamma, 0.6), 0 4px 15px rgba(alpha, 0.25)

  &.front
    transform: translateZ(100px)
    background: linear-gradient(135deg, rgba(alpha, 0.9), rgba(epsilon, 0.9))
    
  &.back
    transform: rotateY(180deg) translateZ(100px)
    background: linear-gradient(135deg, rgba(alpha, 0.9), rgba(delta, 0.9))
    
  &.right
    transform: rotateY(90deg) translateZ(100px)
    background: linear-gradient(135deg, rgba(alpha, 0.9), rgba(beta, 0.9))
    
  &.left
    transform: rotateY(-90deg) translateZ(100px)
    background: linear-gradient(135deg, rgba(alpha, 0.9), rgba(epsilon, 0.9))
    
  &.top
    transform: rotateX(90deg) translateZ(100px)
    background: linear-gradient(135deg, rgba(alpha, 0.9), rgba(delta, 0.9))
    
  &.bottom
    transform: rotateX(-90deg) translateZ(100px)
    background: linear-gradient(135deg, rgba(alpha, 0.9), rgba(beta, 0.9))

.cube-shadow
  position: absolute
  top: 120%
  left: 50%
  transform: translateX(-50%)
  width: 250px
  height: 60px
  background: radial-gradient(ellipse at center, rgba(alpha, 0.25) 0%, transparent 70%)
  filter: blur(10px)

@keyframes rotateCube
  0%
    transform: rotateX(0) rotateY(0)
  100%
    transform: rotateX(360deg) rotateY(360deg)

