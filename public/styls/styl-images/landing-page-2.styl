
// Non-color variables
transition-speed = 0.3s
hover-lift = 8px
deco-font = 'Arial Rounded MT Bold', 'Arial', sans-serif


section.hero-section.index-hero
  display flex
  grid-template-columns 1fr 1fr
  //border 2px solid #fff
  z-index 0
  width 100%
  //height 100vh
  //min-height 600px
  overflow hidden
  position relative
  //margin-top 6rem


  @media(min-width 720px)
    .cube-wrap 
      display flex
  .hero-content
    position relative
    z-index 1
    height fit-content
    //display flex
    flex-direction column
    justify-content center
    align-items center
    text-align center
    margin 0
    padding 0 20px
    max-width 1200px
    gap 1.2rem
    //border 1px solid red

  .hero-title-container
    //margin 11rem 0 40px 0
    width 100%
    //border 1px solid blue
  @media(min-width: 1025px)
      .hero-title-container
        //margin 1rem 0 40px 0
        width auto
  .hero-title
    font-family deco-font
    font-size 72px
    font-weight 900
    line-height 1
    text-wrap nowrap
    margin 0
    color gamma
    text-shadow 2px 2px 0 rgba(alpha, .18), 10px 18px 40px rgba(alpha, .25)
  .title-highlight
    display inline-block
    font-weight 900
    color delta
    font-style: italic


  .hero-subtitle
    font-size 24px
    color rgba(gamma, .92)
    margin 20px 0 0 0
    font-weight 300
    letter-spacing 1px
    max-width 600px

  .subtitle-highlight
    color epsilon
    font-weight 600
    text-shadow 0 2px 4px rgba(alpha, .3)
    position relative
    display inline-block

    &:after
      content ''
      position absolute
      bottom -4px
      left 0
      right 0
      height 3px
      background linear-gradient(90deg, rgba(alpha, 0), delta, rgba(alpha, 0))
      border-radius 2px

  .hero-features
    display flex //grid
    grid-template-columns repeat(auto-fit, minmax(150px, 1fr))
    gap 10px
    margin 0 
    max-width 800px
    width 100%
    flex-wrap wrap
    justify-content center
    //border 1px solid red
    //width 50%

  .feature
    display flex
    align-items center
    gap 12px
    padding 15px //25px
    background rgba(gamma, .1)
    border-radius 12px
    backdrop-filter blur(10px)
    border 1px solid rgba(gamma, .2)
    transition all transition-speed ease

    &:hover
      transform translateY(-5px)
      background rgba(gamma, .2)
      border-color rgba(delta, .3)
      box-shadow 0 10px 20px rgba(alpha, .15)

  .feature-icon
    font-size 24px
    filter drop-shadow(0 2px 4px rgba(alpha, .2))

  .feature-text
    color darken(delta, 15%)
    font-size 16px
    font-weight 600
    text-shadow 0 1px 2px rgba(0, 0, 0, .1)

  .hero-actions
    display flex
    gap 20px
    margin 0 0 40px 0
    flex-wrap wrap
    justify-content center

  .hero-button
    padding 18px 36px
    border none
    border-radius 50px
    font-family inherit
    font-size 18px
    font-weight 600
    cursor pointer
    display flex
    align-items center
    gap 12px
    transition all .3s cubic-bezier(.4, 0, .2, 1)
    position relative
    overflow hidden

    &:before
      content ''
      position absolute
      top 0
      left -100%
      width 100%
      height 100%
      background linear-gradient(90deg, rgba(alpha, 0), rgba(gamma, .2), rgba(alpha, 0))
      transition left .6s ease

    &:hover:before
      left 100%

    &:hover
      transform translateY(-3px) scale(1.02)

    &:active
      transform translateY(0) scale(.98)

  .primary-button
    background linear-gradient(135deg, rgba(delta, .9), rgba(epsilon, .9))
    color darken(alpha, 90%)
    box-shadow 0 10px 30px rgba(delta, .25), inset 0 1px 0 rgba(gamma, .8)

  .secondary-button
    background linear-gradient(135deg, rgba(epsilon, .9), rgba(gamma, .9))
    color darken(alpha, 90%)
    border 2px solid epsilon


  .hero-stats
    display flex
    gap 40px
    max-width 600px
    flex-wrap wrap
    justify-content center
    margin 0

  .stat
    display flex
    flex-direction column
    align-items center

  .stat-number
    font-size 36px
    font-weight 800
    color gamma
    text-shadow 0 2px 4px rgba(alpha, .25)
    line-height 1
    margin 0 0 4px 0

  .stat-label
    font-size 14px
    color beta
    font-weight 500
    text-transform uppercase
    letter-spacing 1px

  // ===== ACCESSIBILITY =====


  // ===== RESPONSIVE =====
  @media (max-width: 768px)
    .hero-section
      //height auto
      //min-height 100vh
      padding 0
      margin 0

    .hero-title//:first-child
      font-size 32px

    .hero-title
      font-size 48px

    .hero-subtitle
      font-size 20px

    .hero-features
      flex-direction column
      gap 15px

    .hero-actions
      flex-direction column
      gap 15px

    .hero-button
      width 100%
      max-width 300px
      justify-content center

  @media (max-width: 480px)
    .hero-title//:first-child
      font-size 28px

    .hero-title
      font-size 36px

    .hero-subtitle
      font-size 18px

  // Desktop:
  // - hero-cube ON and centered
  // - hero-content on the left; all children aligned left
  @media (min-width: 1025px)
    .hero-content
      //position absolute
      top 0
      left 0
      height 100%
      width 50%
      max-width none
      margin 0
      //padding 0 3vw 0 8vw
      align-items flex-start
      text-align left
      //border 1px solid red

    .hero-title-container
      width auto

    .hero-features
      justify-content flex-start
      flex-direction row

    .hero-actions
      justify-content flex-start

    .hero-stats
      justify-content flex-start

    .stat
      align-items flex-start
