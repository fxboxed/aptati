doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Aptati Games - #{title || 'Daily challenges'}
    //- No CSS links yet - you'll add them later
    link(rel="stylesheet" href="/css/main.css")
    block head

  body
    header
      .logo
        h1 Aptati Games
      p.subtitle Daily challenges for your pleasure
      nav
        a(href="/") Home
        if user
          a(href="/dashboard") Dashboard
          a(href="/auth/logout") Logout
        else
          a(href="/auth/google") Login with Google

    main.container
      block content

    footer
      p &copy; #{new Date().getFullYear()} Aptati Games

    //- No JS scripts yet - you'll add them later
    block scripts